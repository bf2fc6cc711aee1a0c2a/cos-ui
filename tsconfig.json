{
  "extends": "./tsconfig.build.json",
  "include": ["src", "test", "types", "webpack.config.js", "__mocks__", "setupTests.ts"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",    
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@i18n/*":["src/i18n/*"],
      "@apis/*":["src/apis/*"],
      "@constants/*":["src/constants/*"],
      "@utils/*":["src/utils/*"],
      "@context/*":["src/context/*"]
    },
  }
}
