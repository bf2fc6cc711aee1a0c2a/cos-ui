{
  "include": ["packages", "types", "scripts", "example", "apps"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@cos-ui/api": ["packages/api/src"],
      "@cos-ui/app": ["packages/app/src"],
      "@cos-ui/creation-wizard": ["packages/creationWizard/src"],
      "@cos-ui/machines": ["packages/machines/src"],

      "@cos-ui-apps/cli": ["apps/cli/src"],
      "@cos-ui-apps/cos-ui": ["apps/cos-ui/src"],
      "@cos-ui-apps/simple-configurator": ["apps/simple-configurator/src"],
      "@cos-ui-apps/multistep-configurator": [
        "apps/multistep-configurator/src"
      ],

      "$test/*": ["test/*"]
    }
  }
}
